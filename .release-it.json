{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "addUntrackedFiles": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}",
    "draft": false,
    "preRelease": false,
    "autoGenerate": true
  },
  "npm": {
    "publish": true,
    "access": "public",
    "publishPath": ".",
    "ignoreVersion": false
  },
  "hooks": {
    "before:init": [
      "npm run test:ci",
      "npm run build"
    ],
    "after:bump": "npm run build"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
